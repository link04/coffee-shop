<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<div class="bg-img" style="background-image: url(<%= asset_path('sad-coffee.jpg') %>);">
  <div class="overlay">
  </div>
</div>

<div class="edit-user-background">
  <div class="edit-user-form text-center sm-padding">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @user do |f| %>
        <%= f.label :full_name %>
        <%= f.text_field :full_name %> <br>
        <%= f.label :user_name %>
        <%= f.text_field :user_name %> <br>
        <%= f.label :password %>
        <%= f.password_field :password %> <br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %> <br>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
