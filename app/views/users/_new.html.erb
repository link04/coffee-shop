
<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name, class: "signup-text-input" %> <br>
  <%= f.label :user_name %>
  <%= f.text_field :user_name, class: "signup-text-input" %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> <br>
  <%= f.submit %>
<% end  %>
