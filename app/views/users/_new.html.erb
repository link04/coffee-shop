<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <p><%= message %></p>
    </div>
    <% end %>
  <% end %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name, autocomplete:"off", class: "signup-text-input" %> <br>
  <%= f.label :user_name %>
  <%= f.text_field :user_name, autocomplete:"off", class: "signup-text-input" %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> <br>
  <div class="xs-padding">
    <%= f.submit "Log Me", class: "main-btn"  %>
  </div>
<% end  %>
