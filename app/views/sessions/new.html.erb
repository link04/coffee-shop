
<div class="section md-padding">
  <div class="container">
    <div class="row container">
        <div class="col-md-4 col-md-offset-4">
          <div class="row">
            <div class="col-md-4 col-md-4 col-md-offset-4 no-padding">
              <%= image_tag(asset_path('a_modern_cup.png'), class: "", id: "coffee_cup") %>
            </div>
          </div>
            <% if flash[:errors] %>
            <div class="alert alert-danger" role="alert">
              <p><%= flash[:errors] %></p>
            </div>
            <% end %>
            <%= form_tag '/login', class: "row" do %>
            <%= label_tag :user_name %>
            <%= text_field_tag :user_name, "", autocomplete:"off", class: "signup-text-input" %>
            <%= label_tag :password %>
            <%= password_field_tag :password , "", autocomplete:"off" %>
            <div class="xs-padding pull-right">
            <%= submit_tag "Log Me", class: "main-btn"  %>
            </div>
            <% end %>
          </div>
      </div>
  </div>
</div>
