

<div class="login-white-space">
  <div class="sm-padding">
    <div class="col-md-4 col-md-offset-4">
      <div class="row">
        <div class="col-md-4 col-md-4 col-md-offset-4">
          <%= image_tag(asset_path('a_modern_cup.png'), class: "", id: "coffee_cup") %>
        </div>
      </div>

      <% if flash[:errors] %>
        <%= flash[:errors] %>
      <% end %>
      <%= form_tag '/login', class: "row" do %>
        <%= label_tag :user_name %>
        <%= text_field_tag :user_name, "", autocomplete:"off", class: "signup-text-input" %>
        <%= label_tag :password %>
        <%= password_field_tag :password , "", autocomplete:"off" %>
        <%= submit_tag('login') %>
      <% end %>
    </div>
  </div>
</div>
