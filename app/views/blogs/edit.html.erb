<% if @blog.errors.any? %>
  <ul>
  <% @blog.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<div class="blog-white-space row sm-padding">
  <div class="blank-paper container sm-padding">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_for @blog do |f| %>
      <%= f.text_field :title, class: "blank-text", id: "form7", placeholder: "Title" %> <br>
      <%= f.text_area :content, class: "blank-text blank-textarea sm-padding", id: "form7", placeholder: "Content"  %> <br>

      <%= f.submit %>

      <% end %>
    </div>
    <%= image_tag(asset_path('happy-cup.png'), class: "pull-right", id: "coffee_cup") %>

  </div>
</div>
