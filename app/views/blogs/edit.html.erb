<div class="section sm-padding">
<div class="container">
  <div class="row container">
        <div class="col-sm-10 col-sm-offset-1">
          <%= form_for @blog do |f| %>
            <% if @blog.errors.any? %>
              <% @blog.errors.full_messages.each do |message| %>
              <div class="alert alert-danger" role="alert">
                <p><%= message %></p>
              </div>
              <% end %>
            <% end %>
          <%= f.text_field :title, autocomplete:"off", class: "blank-text", id: "form7", placeholder: "Title" %> <br>
          <%= f.text_area :content, autocomplete:"off", class: "blank-text blank-textarea sm-padding", id: "form7", placeholder: "Content"  %> <br>

          <%= f.submit 'Edit Me!', class: 'main-btn' %>

          <% end %>
        </div>
        <%= image_tag(asset_path('happy-cup.png'), class: "pull-right", id: "coffee_cup") %>
  </div>
</div>
</div>
